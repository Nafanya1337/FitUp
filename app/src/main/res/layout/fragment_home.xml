<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    tools:context=".fragments.HomeFragment"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

        <ImageView
            android:id="@+id/next2"
            android:layout_width="474sp"
            android:layout_height="230sp"
            android:layout_marginTop="30dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_home_banner1_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/graph"
            android:layout_width="206dp"
            android:layout_height="205dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_banner_massindex_graph"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/next2" />

        <TextView
            android:id="@+id/indexmass_text"
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/banner1_text_bad"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/next2"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/viewmore"
            android:layout_width="145sp"
            android:layout_height="50sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_button_viewmore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indexmass_text" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380sp"
            android:layout_height="75dp"
            android:layout_marginTop="230dp"
            android:src="@drawable/schedule_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/goal"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_button_viewmore_small"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="258dp"
            android:layout_height="304dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="185dp"
            android:foregroundGravity="left"
            android:src="@drawable/calories_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="258dp"
            android:layout_height="304dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="270dp"
            android:foregroundGravity="left"
            android:src="@drawable/calories_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>